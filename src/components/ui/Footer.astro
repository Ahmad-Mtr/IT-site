---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const currentYear = new Date().getFullYear();
const logos = [
  {
    name: "Github",
    src: Facebook,
    link: "https://github.com/Ahmad-Mtr/IT-site",
  },
  {
    name: "Linkedin",
    src: Linkedin,
    link: "https://linkedin.com/company/it-club-gju/",
  },
  {
    name: "Discord",
    src: Facebook,
    link: "https://discord.gg/cFCzxjD3gJ",
  },
  {
    name: "Instagram",
    src: Facebook,
    link: "https://www.instagram.com/gju_itclub/",
  },
];

const links = [
  { name: "About", href: "#about" },
  { name: "Events", href: "#events" },
  { name: "Teams", href: "#teams" },
  { name: "Join Us", href: "#join-us" },
  // { name: "Pricing", href: "#Testimonials" },
  { name: "Blog", href: "/articles" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo for Kreatif Brand" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a
                      class="class-link-alt hover:class-link-alt-hover"
                      href={link.href}
                    >
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-3 text-center md:text-left text-2xl text-green">
              Contact us
            </h3>
            <div class="flex flex-col justify-between pb-10">
              <span class="font-medium"> itclub.gju@gmail.com </span>
            </div>
            <div class="flex flex-col gap-1">
              <span
                >GJU IT Club is an official student club at the German Jordanian
                University.</span
              >

              <span>All rights reserved.</span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >&copy; {currentYear} IT Club GJU - Made With <a
            class="class-link-alt hover:class-link-alt-hover"
            target="_blank"
            href="https://astro.build">Astro</a
          >
        </span>&nbsp
        <span>
          View <a
            href="https://github.com/Ahmad-Mtr/IT-site"
            class="class-link-alt hover:class-link-alt-hover">Source Code</a
          >
        </span>
      </div>
    </div>
  </div>
</section>
